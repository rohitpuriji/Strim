<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:bottom="1dp" android:right="1dp"
        android:top="1dp" android:left="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="#00000000" />
            <solid android:color="#00000000" />

        </shape>
    </item>

    <item android:bottom="1dp" android:right="-5dp"
        android:top="-5dp" android:left="-5dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/color_orange" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>